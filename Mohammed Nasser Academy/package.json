{
  "name": "mohammed-nasser-academy",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "./start-dev.sh",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "install:all": "cd client && npm install && cd ../server && npm install",
    "test:api": "curl -s http://localhost:5000/health | python3 -m json.tool",
    "logs:server": "tail -f server.log",
    "logs:client": "tail -f client.log",
    "clean": "rm -rf client/node_modules server/node_modules server.log client.log",
    "build": "vite build && npm run sentry:sourcemaps",
    "preview": "vite preview",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org taha-mohammed --project mohammed-nasser-site client/dist && sentry-cli sourcemaps upload --org taha-mohammed --project mohammed-nasser-site client/dist"
  },
  "dependencies": {
    "@sentry/cli": "^2.50.0",
    "@sentry/react": "^9.40.0",
    "@sentry/tracing": "^7.120.3",
    "@supabase/supabase-js": "^2.39.3",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "vite": "^7.0.5"
  }
}
